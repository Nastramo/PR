#include <iostream>


using namespace std;

int main() {
    setlocale(LC_ALL, "Russian");
    int n;
    int v=0;
    cin >> n;
    if (n < 1) {
        for (int i = n; i <=1; i++) {
            v =v + i;
        }
        cout << v;
    }
    if (n >=1) {
        for (int i = n; i >=1; i--) {
            v = v + i;
        }
        cout << v;
    }


}
